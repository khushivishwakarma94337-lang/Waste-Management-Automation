<!DOCTYPE html> 
<html>
<head>
  <title>Workers</title>
  <style>
    .row{
      display:flex;
      justify-content:space-between;
      background:#f2f2f2;
      padding:10px;
      margin:8px 0;
      border-radius:6px;
    }
    button{
      background:green;
      color:white;
      border:none;
      padding:5px 10px;
      border-radius:4px;
    }
  </style>
</head>
<body>

  <h2>Workers</h2>

  <% workers.forEach(w => { %>
    <div class="row">
      <span><%= w.name %></span>
      <button>Available</button>
    </div>
  <% }) %>

</body>
</html>